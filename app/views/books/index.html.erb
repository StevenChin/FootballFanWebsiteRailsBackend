<h1>Listing books</h1>

<table>
  <tr>
    <th>Book</th>
    <th>Author</th>
    <th>Title</th>
    <th>Image name</th>
    <th>Purchase url</th>
    <th>Likes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.book_id %></td>
    <td><%= book.author %></td>
    <td><%= book.title %></td>
    <td><%= book.img_name %></td>
    <td><%= book.purchase_url %></td>
    <td><%= book.likes %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

